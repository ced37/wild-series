{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}


{% block body %}


<div class="media">

  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

  <div class="media-body">

    <h1 class="mt-0">{{ program.title }}</h1>

    <p>{{ program.summary }}</p>

    <h2>Catégorie : {{ program.category.name }}</h2>

  </div>

</div>
  <h3>Saisons</h3>
    <ul>
  {% for season in seasons %}
    <a href="{{ path('program_season_show', {programId: program.id, seasonId: season.id}) }}"><li>{{ season.description }}</li></a>
  {% endfor %}
    </ul>

    <strong>Acteurs :</strong>

  <ul>

      {% for actor in program.actors %}

          <a href="{{ path('actor_show', {'id': program.id, 'id': actor.id}) }}"><li>{{ actor.name }} </li></a>

      {% else %}

          <li>Aucun acteur pour cette série</li>

      {% endfor %}

  </ul>


<a href="{{ path('program_index') }}">Retour à la liste des programmes</a>


{% endblock %}
